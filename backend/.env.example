# EcoWaste Management Backend - Environment Configuration Example
# Copy this file to .env and update the values according to your setup

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Connection
PGUSER=your_postgres_username
PGHOST=localhost
PGDATABASE=your_database_name
PGPASSWORD=your_postgres_password
PGPORT=5432

# Database URLs (alternative to individual PG* variables)
# USER_SERVICE_DB_URL=postgresql://username:password@localhost:5432/waste_marketplace_users
# MARKETPLACE_SERVICE_DB_URL=postgresql://username:password@localhost:5432/waste_marketplace
# EDUCATION_SERVICE_DB_URL=postgresql://username:password@localhost:5432/education_db

# =============================================================================
# SERVICE PORTS
# =============================================================================

# User Service Port
USER_SERVICE_PORT=3001

# Marketplace Service Port
MARKETPLACE_SERVICE_PORT=3002

# Educational Content Service Port
EDUCATION_SERVICE_PORT=3003

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

# JWT Secret Key (use a strong, random string in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Frontend URLs (comma-separated for multiple origins)
FRONTEND_URLS=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:3000

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================

# Environment (development, production, test)
NODE_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Version
API_VERSION=v1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Upload directory
UPLOAD_DIR=uploads

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP Configuration for email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# FROM_EMAIL=noreply@ecowaste.com

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Redis Configuration (for caching and sessions)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# AWS S3 Configuration (for file storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=ecowaste-uploads

# =============================================================================
# LOGGING
# =============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log Directory
LOG_DIR=logs
