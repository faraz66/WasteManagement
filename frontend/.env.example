# EcoWaste Management Frontend - Environment Configuration Example
# Copy this file to .env and update the values according to your setup

# =============================================================================
# API ENDPOINTS
# =============================================================================

# Backend API Base URLs
VITE_USER_SERVICE_URL=http://localhost:3001
VITE_MARKETPLACE_SERVICE_URL=http://localhost:3002
VITE_EDUCATION_SERVICE_URL=http://localhost:3003

# API Version
VITE_API_VERSION=v1

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Name
VITE_APP_NAME=EcoWaste Management

# Application Version
VITE_APP_VERSION=1.0.0

# Application Environment
VITE_NODE_ENV=development

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT Token Storage Key
VITE_AUTH_TOKEN_KEY=ecowaste_auth_token

# Session Timeout (in minutes)
VITE_SESSION_TIMEOUT=60

# Remember Me Duration (in days)
VITE_REMEMBER_ME_DURATION=30

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Language Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,es,fr

# =============================================================================
# FEATURES FLAGS
# =============================================================================

# Enable/Disable Features
VITE_ENABLE_MARKETPLACE=true
VITE_ENABLE_EDUCATION=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Google Maps API (for location features)
# VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Analytics (Google Analytics, etc.)
# VITE_GA_TRACKING_ID=GA-XXXXXXXXX-X

# Sentry Error Tracking
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Server Port
VITE_PORT=5173

# Enable Hot Module Replacement
VITE_HMR=true

# Enable Source Maps
VITE_SOURCE_MAPS=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production API URLs (uncomment for production builds)
# VITE_USER_SERVICE_URL=https://api.ecowaste.com
# VITE_MARKETPLACE_SERVICE_URL=https://marketplace-api.ecowaste.com
# VITE_EDUCATION_SERVICE_URL=https://education-api.ecowaste.com

# CDN Configuration
# VITE_CDN_URL=https://cdn.ecowaste.com

# =============================================================================
# SECURITY
# =============================================================================

# Content Security Policy
VITE_CSP_ENABLED=false

# HTTPS Configuration
VITE_HTTPS_ENABLED=false

# =============================================================================
# PERFORMANCE
# =============================================================================

# Bundle Analysis
VITE_ANALYZE_BUNDLE=false

# Lazy Loading
VITE_ENABLE_LAZY_LOADING=true

# Service Worker
VITE_ENABLE_SERVICE_WORKER=false
